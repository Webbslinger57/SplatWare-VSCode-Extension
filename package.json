{
  "name": "splat-language-support",
  "displayName": "Splat Language Support",
  "description": "Syntax highlighting, Snippets, and autocompletion for splatware",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "languages": [{
      "id": "splat",
      "aliases": ["Splat", "splat"],
      "extensions": [".spt",".b1d", ".abk"],
      "configuration": "./language-configuration.json"
    }],
    "grammars": [{
      "language": "splat",
      "scopeName": "source.splat",
      "path": "./syntaxes/splat.tmLanguage.json"
    }],
    "snippets": [{
      "language": "splat",
      "path": "./snippets/splat.json"
    }]
  }
}
